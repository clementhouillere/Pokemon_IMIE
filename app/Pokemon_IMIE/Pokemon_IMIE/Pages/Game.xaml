<Page
    x:Class="Pokemon_IMIE.Pages.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:usersControls="using:Pokemon_IMIE.usercontrols"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pokemon_IMIE.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="game">

    <Grid>
        <Canvas>
            <Image x:Name="map" Source="../Assets/map.png" Stretch="Uniform" Canvas.Left="250" Canvas.Top="-200"/>
        </Canvas>
        <Image x:Name="player" Source="../Assets/player.png" Height="25" Margin="0,0,0,0" />
        <usersControls:MainButton HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="150" Label="Succès"/>
        <usersControls:MainButton x:Name="retry_button" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="150" Label="Recommencer"/>
    </Grid>
</Page>
